<Window x:Class="_22.MVVM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_22.MVVM"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <!--1. Model
        Vad det är: Datan och logiken i din applikation
        Exempel: En klass som representerar en student med egenskaper som namn och ålder
        Ansvar: Håller reda på och hanterar data och logik    
        -->
        
        <!--2. View
        Vad det är: Det du ser på skärmen -gränssnittet
        Exempel: En fönsterdesign eller knapp
        Ansvar: Visar information till användaren ochskickar interaktioner vidare
        till ViewModel
        -->
        
        <!--ViewModel
        Vad det är: Mellanhand mellan Model och View
        Exempel: En klass som hämtar studentens namn från Model och gör
        det redo för view att visa
        Ansvar: Binder ihop Model och view
        -->
        
        
    </Grid>
</Window>
